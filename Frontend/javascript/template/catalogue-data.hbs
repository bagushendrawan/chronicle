<section class="content-sm">
  <div class="flex flex-col gap-1 justify-center mt-5">
    {{#each this}}
      <div
        style="width: 21rem; height: 26rem;"
        class="bg-stone-100 mb-3 px-4 pt-4 pb-5 rounded-lg shadow-md flex flex-col justify-start"
      >
        <div class="font-medium flex items-center text-sm gap-2">
          <i class="fa-solid fa-location-dot"></i>
          Aceh</div>
        <img
          src=".\assets\Robusta-Gayo.png"
          class="rounded-lg w-auto h-75"
          alt="{{title}}"
          style="border-radius: 0.5rem; object-fit: contain"
        />
        <div class="p-2 flex justify-between items-start">
          <div class="flex flex-col gap-2 justify-start items-start">
            <h5 class="font-semibold w-50">Robusta Gayo</h5>
            <div class="flex justify-center items-center gap-1">
              <i class="fa-solid fa-fire fa-md"></i>
              <i class="fa-solid fa-fire fa-md"></i>
              <i class="fa-solid fa-fire fa-md" style="color: #00000076"></i>
            </div>
          </div>
          <div class="flex flex-col justify-self-center align-self-center">
            <span
              class="font-semibold"
              style="color: #d78325; font-size: 1.2rem"
            >$3.20<br /></span>
            <span style="font-weight: 400; font-size: 0.8rem">500gr</span>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>

